<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="com.example.getman.ui.register.RegisterController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER"
      spacing="20" style="-fx-background-color: #f0f0f0; -fx-padding: 20;">
    <Label text="Register page" styleClass="h1, lbl, lbl-primary" style="-fx-font-size: 24px; -fx-text-fill: #ffffff;" />
    <TextField fx:id="usernameField" promptText="Username" style="-fx-pref-width: 200px;" styleClass="form-control"/>
    <TextField fx:id="emailField" promptText="Email" style="-fx-pref-width: 200px;" styleClass="form-control"/>
    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-width: 200px;" styleClass="form-control"/>
    <PasswordField fx:id="rePasswordField" promptText="Confirm password" style="-fx-pref-width: 200px;" styleClass="form-control"/>
    <HBox spacing="10">
        <Button fx:id="registerButton" text="Register" onAction="#handleRegister" styleClass="btn, btn-primary"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" styleClass="btn, btn-secondary"/>
    </HBox>
</VBox>
