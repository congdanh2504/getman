                                                    <Insets top="15" right="12" bottom="15" left="12"/>
                                                </padding>
                                                <TextField fx:id="tfKey" styleClass="bg-white"/>
                                                <TextField fx:id="tfValue" styleClass="bg-white"/>
                                                <Button fx:id="btnAddQuery" text="Add" styleClass="bg-white"/>
                                                <Button fx:id="btnClearQuery" text="Clear" styleClass="bg-white"/>
                                            </HBox>
                                        </VBox>
                                    </content>
                                </Tab>
                                <Tab text="Headers">
