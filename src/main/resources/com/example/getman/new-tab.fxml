                                                        </padding>
                                                        <TextField fx:id="tfFormDataKey" styleClass="bg-white"/>
                                                        <TextField fx:id="tfFormDataValue" styleClass="bg-white"/>
                                                        <Button fx:id="btnAddFormData" text="Add" styleClass="bg-white"/>
                                                        <Button fx:id="btnClearFormData" text="Clear" styleClass="bg-white"/>
                                                        <Button fx:id="btnChooseFile" text="Choose a file" styleClass="bg-white"/>
                                                    </HBox>
                                                </VBox>
                                                <TextArea visible="false" fx:id="jsonTextArea"
